# .env.example
# Copy this file to .env and fill in your actual values
# This runs on the same machine as FreePBX, so use localhost for connections

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///freepbx_ai.db

# ARI Configuration (localhost since on same machine)
ARI_URL=http://localhost:8088/ari
ARI_BASE=http://localhost:8088
ARI_USERNAME=asterisk
ARI_PASSWORD=your_ari_password_here
ARI_APP=ai-agent

# SSH Configuration (localhost since on same machine)
SSH_HOST=localhost
SSH_PORT=22
SSH_USER=sangoma
SSH_PASSWORD=your_ssh_password_here
ASTERISK_SOUNDS_DIR=/var/lib/asterisk/sounds/custom

# Azure Speech Services (REQUIRED for voice transcription)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Azure OpenAI (REQUIRED for AI responses)
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Dataverse (OPTIONAL - for CRM integration)
DATAVERSE_URL=
TENANT_ID=
CLIENT_ID=
CLIENT_SECRET=

# Application Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ESCALATION_THRESHOLD=3
MAX_CALL_DURATION=600

# System Prompt (Optional - has good default)
DEFAULT_SYSTEM_PROMPT=