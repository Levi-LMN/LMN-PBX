# .env.example - Copy to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DATABASE_URL=sqlite:///freepbx_ai.db

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# ARI Configuration (Asterisk REST Interface)
# This is the key difference - we use ARI instead of SIP
ARI_URL=http://10.200.200.2:8088/ari
ARI_BASE=http://10.200.200.2:8088
ARI_USERNAME=asterisk
ARI_PASSWORD=your_ari_password_here
ARI_APP=ai-agent

# SSH Configuration (for uploading audio files to Asterisk)
SSH_HOST=10.200.200.2
SSH_PORT=22
SSH_USER=sangoma
SSH_PASSWORD=your_ssh_password
ASTERISK_SOUNDS_DIR=/var/lib/asterisk/sounds/custom

# Azure Speech Services
# Get these from Azure Portal -> Cognitive Services -> Speech
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_REGION=eastus

# Azure OpenAI
# Get these from Azure Portal -> Azure OpenAI Service
AZURE_OPENAI_KEY=your_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Dataverse (Optional - for customer data integration)
# Leave empty if not using Dataverse
DATAVERSE_URL=https://your-org.crm.dynamics.com
TENANT_ID=your-tenant-id
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret

# AI Configuration
ESCALATION_THRESHOLD=3
MAX_CALL_DURATION=600

# System Prompt (optional - can be customized)
DEFAULT_SYSTEM_PROMPT="You are a professional AI assistant..."